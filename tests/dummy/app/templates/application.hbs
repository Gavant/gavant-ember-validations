<div class="p-3">
    <h2 id="title">Welcome to Ember</h2>
    <FormValidator
        @changeset={{this.changeset}}
        @submit={{this.submitForm}}
        as |changeset Validator|
    >
        <Validator.input @errors={{changeset.error.name.validation}} @fieldLabel="Name" @label={{true}}>
            <Input @value={{changeset.name}} class="form-control" autocomplete="off" />
        </Validator.input>
        <Validator.input @errors={{changeset.error.num.validation}} @fieldLabel="Num" @label={{true}}>
            <Input @value={{changeset.num}} class="form-control" autocomplete="off" />
        </Validator.input>
        <Validator.input @errors={{changeset.error.radio.validation}}>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="radio-input" id="radio1" value="1" {{on "click" (fn (mut changeset.radio) "1")}}>
                <label class="form-check-label" for="radio1">Option 1</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="radio-input" id="radio2" value="1" {{on "click" (fn (mut changeset.radio) "2")}}>
                <label class="form-check-label" for="radio2">Option 2</label>
            </div>
        </Validator.input>
        <Validator.child @changeset={{this.childChangeset}} as |childChangeset ChildValidator|>
            <h2>Child validator</h2>
            <ChildValidator.input @errors={{childChangeset.error.foo.validation}} @fieldLabel="Foo" @label={{true}}>
                <Input @value={{childChangeset.foo}} class="form-control" autocomplete="off" />
            </ChildValidator.input>
        </Validator.child>
        <button class="btn btn-primary" type="submit" {{on "click" Validator.submit}}>Submit</button>
    </FormValidator>
</div>
{{outlet}}